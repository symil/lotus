let START_TIME = 0f;

pub view TestImage {
    @OnRender {
        let sprite_index = 0;

        self
            .image_url("https://img.pokemondb.net/artwork/vector/ninetales-alolan.png")
            .image_layout(2, 2)
            .animation_start_time(START_TIME)
            .animation_current_time(evt.client.get_current_time())
            .animation_duration(2)
    }

    @OnKeyboardEvent {
        if evt.action == KeyboardAction::Down && evt.code == KeyCode::KeyF {
            START_TIME = evt.client.get_current_time();
        }
    }
}
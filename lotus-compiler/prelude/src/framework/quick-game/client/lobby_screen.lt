const HEADER_SIZE = .12h;
const FOOTER_SIZE = .12h;

export view LobbyScreen {
    title: string,
    background_color : Color,
    text_font: Font,
    title_color : Color,

    @OnRender {
        let header = LobbyHeader { ..self };
        let footer = LobbyFooter;
        let middle_panel = match evt.user.is_logged() {
            true => GameItemSelectionPanel,
            false => LoginPanel,
        };

        self.background_color(self.background_color);

        self.layout()
            .move_top()
            .towards_bottom()
            .set_height(HEADER_SIZE)
            .push(header)
            .set_height(1h - HEADER_SIZE - FOOTER_SIZE)
            .push(middle_panel)
            .set_height(FOOTER_SIZE)
            .push(footer)
    }

    @OnKeyDown {
        if evt.key == Key::Tab {
            if evt.shift_key {
                evt.client.focus_prev();
            } else {
                evt.client.focus_next();
            }
            intercept;
        }
    }
}
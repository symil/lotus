pub class MatchmakingButton extends Button {
    @OnRender {
        let text = match evt.user.is_searching_for_game {
            true => "Cancel search",
            false => "Search for game",
        };

        evt.view
            .text(text)
            .text_size(0.4h)
    }

    @OnClick {
        let start = !evt.user.is_searching_for_game;

        evt.client.send_request(MatchmakingRequest { start });
    }
}
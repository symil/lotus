pub view LogoutButton {
    @OnRender {
        let button = Button {
            text: "Log out",
            on_click: send_logout_request
        };

        self.layout()
            .push(button)
    }
}

fn send_logout_request(client: Client) {
    client.remove_local_storage_item(USERNAME_LOCAL_STORAGE_KEY);
    client.send_request(LogoutRequest);
}
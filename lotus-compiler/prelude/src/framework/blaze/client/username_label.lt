const USERNAME_TEXT_SIZE = .35h;

pub class UsernameLabel extends Label {
    @OnRender {
        check evt.user.is_logged();

        evt.view
            .text(evt.user.name)
            .text_color(Color::dodger_blue())
            .text_size(USERNAME_TEXT_SIZE)
            // .border_color(Color::black())
            // .border_width(2r)
            // .border_radius(0.5h)
    }
}
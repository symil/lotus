pub class LobbyFooter {
    @OnRender {
        check evt.user.is_logged();
        
        evt.view.layout()
            .background_color(Color::green())
            .outer_margin(.1h)
            .push(MatchmakingButton)
            .aspect_ratio(4)
            .reset()
            .bottom_right_to_left()
            .push(LogoutButton)
            .height(0.5h)
            .aspect_ratio(3)
    }
}
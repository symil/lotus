export fn main() {
    let amount = 4.pow(10);
    let big = @alloc(amount);

    @assert(#LINE, big[-1] == 1);
    @assert(#LINE, !big.is_null())

    @trigger_garbage_collection();
    @assert(#LINE, big[-1] == 0);

    let big2 = @alloc(amount);
    @assert(#LINE, big2 == big);
    
    @retain(big2);
    let big3 = @alloc(amount);
    @assert(#LINE, !big3.is_null())
    @assert(#LINE, big3 != big2);
}
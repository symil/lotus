pub view TextBox {
    @OnRender {
        self.background_color(Color::orange())
            .border_color(Color::black())
            .border_radius(.15m)
            .border_width(.04m)
            .text_horizontal_align(HorizontalAlign::Center)
            .text_size(.5h)
            .text(evt.client.local_data.name)
            .cursor(Cursor::Text)
    }

    @OnKeyboardEvent {
        if evt.code == KeyCode::Escape {
            evt.client.focus(none);
            intercept;
        } else {
            let valid = true;

            match evt.code {
                Backspace => {
                    
                }
            }
        }
    }
}
view Window {
    @OnRender {
        self.background_color(Color::white());
        self.layout()
            .move_to(0.5, 0.5)
            .scale_x(0.35)
            .strip_to_match_aspect_ratio(5)
            .pad_to_match_aspect_ratio(10)
            .push(UsernameTextBox)
    }

    @OnDefineMouseInteractions {
        
    }
}

class World {
    @OnWorldInit {
        @log("WORLD INIT");
    }

    @OnUserConnect {
        @log(`CONNECT: ${evt.user}`);
    }

    @OnUserDisconnect {
        @log(`DISCONNECT: ${evt.user}`);
    }

    @OnUserRequest {

    }
}
view Window {
    @OnRender {
        self.background_color(Color::white());
        self.layout()
            .move_to(0.5, 0.5)
            .scale_x(0.35)
            .strip_to_match_aspect_ratio(5)
            .push(UsernameTextBox)
    }

    @OnDefineMouseInteractions {
        
    }

    @OnKeyboardEvent {
        if evt.code == KeyCode::Tab && evt.action == KeyboardAction::Down {
            if evt.shift_key {
                self.client.focus_prev();
            } else {
                self.client.focus_next();
            }
            intercept;
        }
    }
}

class World {
    @OnWorldInit {
        @log("WORLD INIT");
    }

    @OnUserConnect {
        @log(`CONNECT: ${evt.user}`);
    }

    @OnUserDisconnect {
        @log(`DISCONNECT: ${evt.user}`);
    }

    @OnUserRequest {

    }
}
class MyRequest {
    value: string
}

view Window {
    @OnRender {
        self
            .background_color(WHITE)
            .scale(0.5)
    }

    @OnPostRender {
        self
            .hover_background_color(ORANGE)
            .hover_cursor(Cursor::Pointer)
            .on_click(() => evt.client.request(MyRequest { value: "foo" }))
    }
}

class World {
    @OnWorldInit {
        let value : string = evt.server.load("hello");
        @dbg(value);
        value = "This is a test";
        evt.server.store("hello", value);
        value = evt.server.load("hello");
        @dbg(value);
    }

    @OnUserConnect {
        @log(`CONNECT: ${evt.user}`);
    }

    @OnUserDisconnect {
        @log(`DISCONNECT: ${evt.user}`);
    }

    @OnUserRequest {

    }
}
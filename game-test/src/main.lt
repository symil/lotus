class MyRequest {
    value: string
}

view Window {
    @OnRender {
        self
            .background_color(WHITE)
            .scale(0.5)
    }

    @OnPostRender {
        self
            .hover_background_color(ORANGE)
            .hover_cursor(Cursor::Pointer)
            .on_click(() => evt.client.request(MyRequest { value: "foo" }))
    }
}

class World {
    @OnWorldInit {
        @log("WORLD INIT");
    }

    @OnUserConnect {
        @log(`CONNECT: ${evt.user}`);
    }

    @OnUserDisconnect {
        @log(`DISCONNECT: ${evt.user}`);
    }

    @OnUserRequest {
    }
}
view Window extends BasicGameWindow {
    self.background_color = Color::light_green()
    self.title = "Some game"
    self.title_color = Color::red()
}

class World {
    @OnWorldInit {
        @log("WORLD INIT");
    }

    @OnUserConnect {
        @log(`CONNECT: ${evt.user}`);
    }

    @OnUserDisconnect {
        @log(`DISCONNECT: ${evt.user}`);
    }

    @OnUserRequest {
        if evt.request is LoginRequest(login_request) {
            evt.user.name = login_request.username;
        }
    }
}

type User = BasicGameUser;
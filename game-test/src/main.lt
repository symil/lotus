class MyRequest {
    value: string
}

view Window {
    test() {
        let a = self;
    }

    @OnRender {
        self
            .background_color(Color::white())
            .scale(0.5)
    }

    @OnPostRender {
        self
            .hover_background_color(Color::orange())
            .hover_cursor(Cursor::Pointer)
            .on_click(() => evt.client.request(MyRequest { value: "foo" }))
    }
}

class World {
    @OnWorldInit {
        let value : string = evt.server.load("hello");
        @dbg(value);
        value = "This is a test";
        evt.server.store("hello", value);
        value = evt.server.load("hello");
        @dbg(value);
    }

    @OnUserConnect {
        @log(`CONNECT: ${evt.user}`);
    }

    @OnUserDisconnect {
        @log(`DISCONNECT: ${evt.user}`);
    }

    @OnUserRequest {

    }
}

